{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hampusn/vscode-sitevision-snippets/blob/master/snippets-schema.json",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "prefix": {
        "type": ["array", "string"],
        "items": {
          "type": "string"
        },
        "uniqueItems": true,
        "minItems": 1
      },
      "body": {
        "type": ["array", "string"],
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "description": {
        "type": "string"
      }
    },
    "required": ["prefix", "body"]
  }
}
